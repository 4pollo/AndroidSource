<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/account_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:background="@drawable/wb_bg_titlebar"
        android:ellipsize="middle"
        android:gravity="center"
        android:singleLine="true"
        android:text="账号管理"
        android:textColor="#ffffffff"
        android:textSize="25.0sp" />

    <ListView
        android:id="@+id/account_listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_default_headicon"
        android:layout_below="@+id/account_title"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/wb_box_information_nor05"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/list_divider"
        android:listSelector="#00000000" />

    <TextView
        android:id="@+id/account_add_btn_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/account_add_btn_selector"
        android:focusable="true"
        android:gravity="center"
        android:text="添加账号"
        android:textColor="#000000"
        android:textSize="20.0sp" />

    <ImageView
        android:id="@+id/user_default_headicon"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_above="@+id/account_cur_account"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:background="@drawable/img_select"
        android:padding="4.0dip" />

    <TextView
        android:id="@+id/account_cur_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/account_add_btn_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="请添加帐号"
        android:textColor="#000000" />

</RelativeLayout>